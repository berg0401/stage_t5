<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4">
  <BehaviorTree ID="action_server_test">
    <Sequence>
      <AddTwoInts service_name="add_two_ints"
                  timeout="100"
                  first_int="14"
                  second_int="18"
                  sum="{add_two_result}"/>
      <PrintValue message="{add_two_result}"/>
      <RetryUntilSuccessful num_attempts="5">
        <Timeout msec="5000">
          <Fibonacci order="5"
                     server_name="fibonacci"
                     timeout="500"
                     result="{fibonacci_result}"/>
        </Timeout>
      </RetryUntilSuccessful>
      <PrintValue message="{fibonacci_result}"/>
    </Sequence>
  </BehaviorTree>

  <!-- Description of Node Models (used by Groot) -->
  <TreeNodesModel>
    <Action ID="AddTwoInts"
            editable="true">
      <input_port name="service_name"
                  default="add_two_ints"/>
      <input_port name="timeout"/>
      <inout_port name="first_int"/>
      <input_port name="second_int"/>
      <output_port name="sum"
                   default="{add_two_result}"/>
    </Action>
    <Action ID="Fibonacci"
            editable="true">
      <input_port name="order"/>
      <input_port name="server_name"
                  default="fibonacci"/>
      <input_port name="timeout"/>
      <output_port name="result"
                   default="{fibonacci_result}"/>
    </Action>
    <Action ID="PrintValue"
            editable="true">
      <input_port name="message"
                  default="{add_two_result}"/>
    </Action>
  </TreeNodesModel>

</root>
